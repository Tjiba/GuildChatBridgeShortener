  "authors": ["Tjiba"],
  "license": "MIT",
  "icon": "icon.png",
  "environment": "client",
  "entrypoints": {
    "client": ["com.guildchat.formatter.GuildChatMod"],
    "modmenu": ["com.guildchat.formatter.config.ModMenuIntegration"]
  },
  "mixins": ["guildchat-shortener.mixins.json"],
  "depends": {
    "fabricloader": ">=0.18.0",
    "minecraft": "~1.21",
    "java": ">=21",
    "fabric-api": "*"
  },
  "contact": {
    "website": "https://modrinth.com/mod/guildchat-shortener"
  }
}
